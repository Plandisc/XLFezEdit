<UserControl x:Class="XLFezEditor.Files.XLFDataView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:XLFezEditor.Files"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <DataGrid x:Name="Data" >
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding Path=Source}" />
                <DataGridTextColumn Binding="{Binding Path=Target}" />
                <DataGridTextColumn Binding="{Binding Path=Note}" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
